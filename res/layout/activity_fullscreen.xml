<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e5e5e5"
    
    tools:context=".Home" >

   	<TextView
   	    android:id="@+id/budgetTV"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentLeft="true"
   	    android:layout_alignParentTop="true"
   	    android:text="@string/budgetTV" />

   	<TextView
   	    android:id="@+id/fishAge"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignLeft="@+id/fishName"
   	    android:layout_below="@+id/fishName"
   	    android:text="@string/fishAge" />

   	<Button
   	    android:id="@+id/button_budgets"
   	    android:layout_width="90dp"
   	    android:layout_height="40dp"
   	    android:layout_alignParentBottom="true"
   	    android:layout_alignParentLeft="true"
   	    android:onClick="button_budgets"
   	    android:text="@string/button_budgets" />

   	<ImageButton
   	    android:id="@+id/button_settings"
   	    android:layout_width="wrap_content"
   	    android:contentDescription="@string/button_settings"
   	    android:layout_height="wrap_content"
   	    android:layout_alignTop="@+id/button_budgets"
   	    android:layout_centerHorizontal="true"
   	    android:background="@null"
   	    android:onClick="button_settings"
   	    android:src="@drawable/settings" />

   	<TextView
   	    android:id="@+id/endDate"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignBottom="@+id/button_settings"
   	    android:layout_marginLeft="29dp"
   	    android:layout_toRightOf="@+id/button_settings"
   	    android:text="@string/endDate" />

   	<TextView
   	    android:id="@+id/fishName"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignBaseline="@+id/budgetTV"
   	    android:layout_alignBottom="@+id/budgetTV"
   	    android:layout_alignLeft="@+id/endDate"
   	    android:text="@string/fishName" />

   	<ImageButton
   	    android:id="@+id/button_add"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/button_settings"
   	    android:layout_toRightOf="@+id/budgetTV"
   	    android:background="@null"
   	    android:contentDescription="@string/button_add"
   	    android:onClick="button_add"
   	    android:src="@android:drawable/ic_input_add" />

   	<Button
   	    android:id="@+id/goldfishbutton"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_below="@+id/fishAge"
   	    android:layout_centerHorizontal="true"
   	    android:layout_marginTop="102dp"
   	    android:background="@drawable/goldfishbutton" />

</RelativeLayout>


